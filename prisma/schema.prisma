generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Apps {
  id String @unique @id
  appName String
  AllowedRedirectDomains AllowedRedirectDomains[]
  Scopes Scopes[]
}

model AllowedRedirectDomains {
  id String @unique @id
  appId String
  uri String
  Apps Apps @relation(fields: [appId], references: [id])
}

model Scopes {
  id String @unique @id
  description String
  Apps Apps[]
}

model Users {
  userId String @unique @id
  name String
  email String @unique
  nif String @unique
  contato String
  password String
  otpCode String?
  TrustedDevices TrustedDevices[]
  RecoverCodes RecoverCodes[]
}

model TrustedDevices {
  id String @unique @id
  fingerprint String @unique
  Users Users[]
}

model RecoverCodes {
  id String @unique @id
  code String @unique
  userId String
  Users Users @relation(fields: [userId], references: [userId])
}